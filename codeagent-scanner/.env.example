# Environment Configuration for CodeAgent Scanner

# Storage configuration
STORAGE_BASE=./storage

# Upload limits  
MAX_UPLOAD_SIZE=52428800  # 50MB in bytes
MAX_CONCURRENT_JOBS=2

# Server configuration
HOST=0.0.0.0
PORT=8080
WORKERS=1

# Security (set these in production)
# API_KEY_SECRET=your-secret-key-here
# WEBHOOK_SECRET=your-webhook-secret

# Analyzer configuration
DEFAULT_TIMEOUT_SEC=600
MAX_FILES_PER_JOB=10000
DEFAULT_ANALYZERS=bandit,semgrep,depcheck

# Logging
LOG_LEVEL=INFO

# GitHub access (if needed for private repos)
# GITHUB_TOKEN=your-github-token

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
MAX_JOBS_PER_API_KEY=2

# Cleanup
JOB_RETENTION_DAYS=7
REPORT_RETENTION_DAYS=30

# ==========================================
# AI Integration Settings (Phase 2)
# ==========================================

# OpenAI Configuration (required for AI analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Model Selection
AI_MODEL=GPT_4  # Options: GPT_4, GPT_3_5_TURBO, GPT_4_32K

# Enable/Disable AI Analysis
ENABLE_AI_ANALYSIS=true

# AI Analysis Configuration
AI_ANALYSIS_MIN_SEVERITY=high  # Only analyze high/critical issues by default
MAX_CONCURRENT_AI_REVIEWS=1    # Limit concurrent AI reviews to control costs

# AI Processing Timeout
AI_ANALYSIS_TIMEOUT_SEC=300    # 5 minutes per file
