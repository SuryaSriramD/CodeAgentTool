# CodeAgent Scanner - Environment Variables Template
# Copy this file to .env.local and configure for your environment

# ============================================
# Backend API Configuration (REQUIRED)
# ============================================
# The base URL of the CodeAgent Scanner backend API
#
# DOCKER SETUP (Recommended):
#   Backend runs in Docker container (port 8080 inside)
#   Docker maps host:8000 â†’ container:8080
#   Frontend calls: http://localhost:8000
#   Command: docker run -d -p 8000:8080 ...
#
# NATIVE SETUP (Development):
#   Backend runs directly with Python (port 8080)
#   No Docker port mapping
#   Frontend calls: http://localhost:8080
#   Command: python api/app.py
#
# PRODUCTION:
#   Use your production domain
#   Example: https://api.yourdomain.com
#
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================
# Application Information
# ============================================
NEXT_PUBLIC_APP_NAME="CodeAgent Vulnerability Scanner"
NEXT_PUBLIC_APP_VERSION="0.1.0"

# ============================================
# Feature Flags
# ============================================
# Enable/disable AI-powered vulnerability analysis features
NEXT_PUBLIC_ENABLE_AI_FEATURES=true

# Enable/disable webhook management UI
NEXT_PUBLIC_ENABLE_WEBHOOKS=true

# Enable/disable analytics tracking (Vercel Analytics, etc.)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ============================================
# UI Configuration
# ============================================
# Maximum file size for ZIP uploads (in MB)
NEXT_PUBLIC_MAX_FILE_SIZE_MB=50

# Default number of items per page in lists/tables
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20

# Interval for polling job status (in milliseconds)
# Set to 0 to rely only on SSE (Server-Sent Events)
NEXT_PUBLIC_POLLING_INTERVAL_MS=5000

# ============================================
# Development Settings
# ============================================
# Enable debug logging in browser console
NEXT_PUBLIC_DEBUG_MODE=false

# Show development tools and panels
NEXT_PUBLIC_SHOW_DEV_TOOLS=false

# ============================================
# Optional: Analytics & Monitoring
# ============================================
# Vercel Analytics (if enabled)
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Google Analytics (if needed)
# NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Sentry (if needed)
# NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# Notes
# ============================================
# - All NEXT_PUBLIC_* variables are exposed to the browser
# - Never put sensitive secrets in NEXT_PUBLIC_* variables
# - Backend authentication tokens should be handled via HTTP-only cookies
# - For production, update NEXT_PUBLIC_API_URL to your production API domain
